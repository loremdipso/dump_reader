{
	"extends": "@tsconfig/svelte/tsconfig.json",
	"include": [
		"src/**/*"
	],
	"compilerOptions": {
		"sourceMap": true,
		"baseUrl": "./src",
		"paths": {
			"@components/*": [
				"components/*"
			],
			"@utils/*": [
				"utils/*"
			]
		}
	},
	"exclude": [
		"node_modules/*",
		"__sapper__/*",
		"docs/*"
	]
}
